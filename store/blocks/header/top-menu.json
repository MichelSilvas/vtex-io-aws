{
  "flex-layout.col#search": {
    "children": [
      "search-bar"
    ]
  },
  
  "flex-layout.col#login": {
    "props": {
      "verticalAlign": "middle"
    },
    "children": [
      "login#button-login"
    ]
  },

  "vtex.menu@2.x:menu#websites": {
    "children": [
      "minicart.v2"
    ]
  },

  "menu-item#logo": {
    "props": {
      "id": "menu-item-logo",
      "type": "custom",
      "iconId": null,
      "highlight": false,
      "itemProps": {
        "type": "internal",
        "url": "./assets/logo.jpg",
        "noFollow": false,
         "size": "70"
      }
    }
  },

  "login#button-login": {
    "props": {
      "blockClass": "login-header"
    }
  }
}
